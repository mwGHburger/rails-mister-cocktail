<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1504675099198-7023dd85f5a3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
  <%= link_to "Back to Cocktails List", cocktails_path, class: "btn btn-danger" %>
</div>

<div class="container">
  <div class="cocktail-ingredients">
    <h2>Ingredients</h2>
    <% @cocktail.doses.each do |dose|%>
      <p>
        <%= dose.ingredient.name %>-<%= dose.description %>
        <%= link_to "(delete)", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </p>
    <% end %>
    <%= link_to "Add new ingredient/dose", new_cocktail_dose_path(@cocktail), class: "button-green" %>
  </div>
</div>




